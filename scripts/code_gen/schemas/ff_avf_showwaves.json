{
  "description": "Convert input audio to a video output.",
  "filter_type": "avf",
  "formula_input_typings": null,
  "formula_output_typings": null,
  "id": "ff_avf_showwaves",
  "input_stream_typings": [
    {
      "name": "default",
      "type": "AVMEDIA_TYPE_AUDIO"
    }
  ],
  "is_input_dynamic": false,
  "is_output_dynamic": false,
  "is_support_framesync": false,
  "is_support_timeline": false,
  "name": "showwaves",
  "options": [
    {
      "alias": [
        "size",
        "s"
      ],
      "choices": [],
      "default": "\"600x240\"",
      "description": "set video size (default \"600x240\")",
      "name": "size",
      "required": false,
      "typing": "str"
    },
    {
      "alias": [
        "mode"
      ],
      "choices": [
        {
          "help": "draw a point for each sample",
          "name": "point",
          "value": "0"
        },
        {
          "help": "draw a line for each sample",
          "name": "line",
          "value": "1"
        },
        {
          "help": "draw a line between samples",
          "name": "p2p",
          "value": "2"
        },
        {
          "help": "draw a centered line for each sample",
          "name": "cline",
          "value": "3"
        }
      ],
      "default": "point",
      "description": "select display mode (from 0 to 3) (default point)",
      "name": "mode",
      "required": false,
      "typing": "int"
    },
    {
      "alias": [
        "n"
      ],
      "choices": [],
      "default": "0",
      "description": "set how many samples to show in the same point (from 0 to INT_MAX) (default 0)",
      "name": "n",
      "required": false,
      "typing": "int"
    },
    {
      "alias": [
        "rate",
        "r"
      ],
      "choices": [],
      "default": "\"25\"",
      "description": "set video rate (default \"25\")",
      "name": "rate",
      "required": false,
      "typing": "str"
    },
    {
      "alias": [
        "split_channels"
      ],
      "choices": [],
      "default": "false",
      "description": "draw channels separately (default false)",
      "name": "split_channels",
      "required": false,
      "typing": "bool"
    },
    {
      "alias": [
        "colors"
      ],
      "choices": [],
      "default": "\"red|green|blue|yellow|orange|lime|pink|magenta|brown\"",
      "description": "set channels colors (default \"red|green|blue|yellow|orange|lime|pink|magenta|brown\")",
      "name": "colors",
      "required": false,
      "typing": "str"
    },
    {
      "alias": [
        "scale"
      ],
      "choices": [
        {
          "help": "linear",
          "name": "lin",
          "value": "0"
        },
        {
          "help": "logarithmic",
          "name": "log",
          "value": "1"
        },
        {
          "help": "square root",
          "name": "sqrt",
          "value": "2"
        },
        {
          "help": "cubic root",
          "name": "cbrt",
          "value": "3"
        }
      ],
      "default": "lin",
      "description": "set amplitude scale (from 0 to 3) (default lin)",
      "name": "scale",
      "required": false,
      "typing": "int"
    },
    {
      "alias": [
        "draw"
      ],
      "choices": [
        {
          "help": "scale pixel values for each drawn sample",
          "name": "scale",
          "value": "0"
        },
        {
          "help": "draw every pixel for sample directly",
          "name": "full",
          "value": "1"
        }
      ],
      "default": "scale",
      "description": "set draw mode (from 0 to 1) (default scale)",
      "name": "draw",
      "required": false,
      "typing": "int"
    }
  ],
  "output_stream_typings": [
    {
      "name": "default",
      "type": "AVMEDIA_TYPE_VIDEO"
    }
  ],
  "ref": "https://ffmpeg.org/ffmpeg-filters.html#showwaves"
}
