{
  "description": "Convert input audio to histogram video output.",
  "filter_type": "avf",
  "formula_input_typings": null,
  "formula_output_typings": null,
  "id": "ff_avf_ahistogram",
  "input_stream_typings": [
    {
      "name": "default",
      "type": "audio"
    }
  ],
  "is_input_dynamic": false,
  "is_output_dynamic": false,
  "is_support_framesync": false,
  "is_support_timeline": false,
  "name": "ahistogram",
  "options": [
    {
      "alias": [
        "dmode"
      ],
      "choices": [
        {
          "help": "all channels use single histogram",
          "name": "single",
          "value": "0"
        },
        {
          "help": "each channel have own histogram",
          "name": "separate",
          "value": "1"
        }
      ],
      "default": "single",
      "description": "set method to display channels (from 0 to 1) (default single)",
      "name": "dmode",
      "required": false,
      "typing": "Int"
    },
    {
      "alias": [
        "rate",
        "r"
      ],
      "choices": [],
      "default": "\"25\"",
      "description": "set video rate (default \"25\")",
      "name": "rate",
      "required": false,
      "typing": "Video_rate"
    },
    {
      "alias": [
        "size",
        "s"
      ],
      "choices": [],
      "default": "\"hd720\"",
      "description": "set video size (default \"hd720\")",
      "name": "size",
      "required": false,
      "typing": "Image_size"
    },
    {
      "alias": [
        "scale"
      ],
      "choices": [
        {
          "help": "logarithmic",
          "name": "log",
          "value": "3"
        },
        {
          "help": "square root",
          "name": "sqrt",
          "value": "1"
        },
        {
          "help": "cubic root",
          "name": "cbrt",
          "value": "2"
        },
        {
          "help": "linear",
          "name": "lin",
          "value": "0"
        },
        {
          "help": "reverse logarithmic",
          "name": "rlog",
          "value": "4"
        }
      ],
      "default": "log",
      "description": "set display scale (from 0 to 4) (default log)",
      "name": "scale",
      "required": false,
      "typing": "Int"
    },
    {
      "alias": [
        "ascale"
      ],
      "choices": [
        {
          "help": "logarithmic",
          "name": "log",
          "value": "1"
        },
        {
          "help": "linear",
          "name": "lin",
          "value": "0"
        }
      ],
      "default": "log",
      "description": "set amplitude scale (from 0 to 1) (default log)",
      "name": "ascale",
      "required": false,
      "typing": "Int"
    },
    {
      "alias": [
        "acount"
      ],
      "choices": [],
      "default": 1,
      "description": "how much frames to accumulate (from -1 to 100) (default 1)",
      "name": "acount",
      "required": false,
      "typing": "Int"
    },
    {
      "alias": [
        "rheight"
      ],
      "choices": [],
      "default": 0.1,
      "description": "set histogram ratio of window height (from 0 to 1) (default 0.1)",
      "name": "rheight",
      "required": false,
      "typing": "Float"
    },
    {
      "alias": [
        "slide"
      ],
      "choices": [
        {
          "help": "replace old rows with new",
          "name": "replace",
          "value": "0"
        },
        {
          "help": "scroll from top to bottom",
          "name": "scroll",
          "value": "1"
        }
      ],
      "default": "replace",
      "description": "set sonogram sliding (from 0 to 1) (default replace)",
      "name": "slide",
      "required": false,
      "typing": "Int"
    },
    {
      "alias": [
        "hmode"
      ],
      "choices": [
        {
          "help": "use absolute samples",
          "name": "abs",
          "value": "0"
        },
        {
          "help": "use unchanged samples",
          "name": "sign",
          "value": "1"
        }
      ],
      "default": "abs",
      "description": "set histograms mode (from 0 to 1) (default abs)",
      "name": "hmode",
      "required": false,
      "typing": "Int"
    }
  ],
  "output_stream_typings": [
    {
      "name": "default",
      "type": "video"
    }
  ],
  "ref": "https://ffmpeg.org/ffmpeg-filters.html#ahistogram"
}
