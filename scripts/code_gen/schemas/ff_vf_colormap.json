{
  "description": "Apply custom Color Maps to video stream.",
  "filter_type": "vf",
  "formula_input_typings": null,
  "formula_output_typings": null,
  "id": "ff_vf_colormap",
  "input_stream_typings": [
    {
      "name": "default",
      "type": "AVMEDIA_TYPE_VIDEO"
    },
    {
      "name": "source",
      "type": "AVMEDIA_TYPE_VIDEO"
    },
    {
      "name": "target",
      "type": "AVMEDIA_TYPE_VIDEO"
    }
  ],
  "is_input_dynamic": false,
  "is_output_dynamic": false,
  "is_support_framesync": false,
  "is_support_timeline": true,
  "name": "colormap",
  "options": [
    {
      "alias": [
        "patch_size"
      ],
      "choices": [],
      "default": "64x64",
      "description": "<dd><p>Set the source and target video stream patch size in pixels.\n</p>\n</dd>",
      "name": "patch_size",
      "required": false,
      "typing": "str"
    },
    {
      "alias": [
        "nb_patches"
      ],
      "choices": [],
      "default": 0,
      "description": "<dd><p>Set the max number of used patches from source and target video stream.\nDefault value is number of patches available in additional video streams.\nMax allowed number of patches is <code>64</code>.\n</p>\n</dd>",
      "name": "nb_patches",
      "required": false,
      "typing": "int"
    },
    {
      "alias": [
        "type"
      ],
      "choices": [
        {
          "help": "the target colors are relative",
          "name": "relative",
          "value": 0
        },
        {
          "help": "the target colors are absolute",
          "name": "absolute",
          "value": 1
        }
      ],
      "default": 1,
      "description": "<dd><p>Set the adjustments used for target colors. Can be <code>relative</code> or <code>absolute</code>.\nDefaults is <code>absolute</code>.\n</p>\n</dd>",
      "name": "type",
      "required": false,
      "typing": "int"
    },
    {
      "alias": [
        "kernel"
      ],
      "choices": [
        {
          "help": "square root of sum of squared differences",
          "name": "euclidean",
          "value": "EUCLIDEAN"
        },
        {
          "help": "weighted square root of sum of squared differences",
          "name": "weuclidean",
          "value": "WEUCLIDEAN"
        }
      ],
      "default": 0,
      "description": "<dd><p>Set the kernel used to measure color differences between mapped colors.\n</p>\n<p>The accepted values are:\n</p><dl compact=\"compact\">\n<dt>\u2018<samp>euclidean</samp>\u2019</dt>\n<dt>\u2018<samp>weuclidean</samp>\u2019</dt>\n</dl>\n<p>Default is <code>euclidean</code>.\n</p></dd>",
      "name": "kernel",
      "required": false,
      "typing": "int"
    },
    {
      "alias": [],
      "choices": [],
      "default": null,
      "description": "timeline editing",
      "name": "enable",
      "required": false,
      "typing": "str"
    }
  ],
  "output_stream_typings": [
    {
      "name": "default",
      "type": "AVMEDIA_TYPE_VIDEO"
    }
  ],
  "ref": "https://ffmpeg.org/ffmpeg-filters.html#colormap"
}
